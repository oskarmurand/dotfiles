#!/usr/bin/env bash

CODE_DIR="$HOME/Code"
DOTFILES_DIR="$CODE_DIR/dotfiles"
BIN_DIR="$DOTFILES_DIR/bin"
SCRIPT_DIR="$DOTFILES_DIR/scripts"

# Git shortcuts
alias g="git"
alias git-update-all='find . -type d -name .git -exec sh -c "cd \"{}\"/../ && pwd && git checkout master && git pull" \;'


alias ll="ls -lah"
alias nvim="nvim"
alias chrome="open -a 'Google Chrome'"

# tomato timer
source "$SCRIPT_DIR/pomodoro.sh"
